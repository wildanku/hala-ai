# Hala AI Service Environment Variables
# Copy this file to .env and fill in your values

# ======================
# App Settings
# ======================
APP_NAME="Hala AI Service"
APP_VERSION="1.0.0"
DEBUG=false
ENVIRONMENT=development  # development, staging, production

# ======================
# API Settings
# ======================
API_V1_PREFIX=/api/v1

# ======================
# PostgreSQL Database
# ======================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password_here
POSTGRES_DB=hala_ai

# ======================
# ChromaDB (Vector Store)
# ======================
CHROMA_PERSIST_DIRECTORY=./data/chromadb
CHROMA_COLLECTION_NAME=hala_knowledge_base

# ======================
# Embedding Model
# ======================
EMBEDDING_MODEL_NAME=all-MiniLM-L6-v2

# ======================
# LLM Provider Settings
# ======================
DEFAULT_LLM_PROVIDER=gemini  # gemini, openai, ollama

# Gemini (Google AI)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL_NAME=gemini-1.5-flash

# OpenAI (Optional)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL_NAME=gpt-4o-mini

# Ollama (Optional - Local LLM)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL_NAME=llama3.2

# ======================
# Pipeline Settings
# ======================
# Layer 1: Sanitization
MIN_INPUT_LENGTH=10
MAX_INPUT_LENGTH=500

# Layer 2: Semantic Validation
SEMANTIC_SIMILARITY_THRESHOLD=0.45

# Layer 4: RAG
RAG_TOP_K_RESULTS=5
